<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/defaultpading">

        <ImageView
            android:id="@+id/imageStanderd"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="fitXY"
            android:src="@drawable/imgthree" />

        <TextView
            android:id="@+id/standerdTextCtg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/defaultpading"
            android:text="Category Name"
            android:textColor="@color/color_black"
            android:textSize="@dimen/defaultTextSize"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/standerd_design_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/defaultpading"
            android:paddingTop="@dimen/defaultpading"
            android:text="Design ID"
            android:textSize="@dimen/defaultTextSize" />

        <TextView
            android:id="@+id/selectDesign"
            android:layout_width="200dp"
            android:layout_height="@dimen/buttonHeight"
            android:layout_gravity="center"
            android:background="@drawable/button_style2"
            android:gravity="center"
            android:text="SELECT DESIGN"
            android:textColor="@color/white"
            android:textSize="@dimen/defaultTextSize"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:drawablePadding="@dimen/defaultTextSize"
            android:drawableBottom="@drawable/visibility_button"
            android:id="@+id/selectDesignView"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/button_style2"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>