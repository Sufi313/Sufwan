<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    app:cardCornerRadius="@dimen/defaultTextSize"
    app:cardElevation="15sp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/dialog_design_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/defaultpading"
            android:text="Design Type"
            android:textColor="@color/color_black"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/dialog_design_image"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:padding="@dimen/defaultpading"
            android:scaleType="fitXY"
            android:src="@drawable/imgthree" />

        <TextView
            android:id="@+id/dialog_design_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/defaultpading"
            android:text="Design Name"
            android:textColor="@color/color_black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/dialog_design_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/defaultpading"
            android:text="Stitching Cost"
            android:textColor="@color/color_black"
            android:textSize="30sp" />


    </LinearLayout>
</android.support.v7.widget.CardView>
